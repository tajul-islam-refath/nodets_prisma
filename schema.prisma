datasource db {
    provider = "mysql"
    url      = "mysql://root:@localhost:3306/testdb"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id      Int    @id @default(autoincrement())
    name    String
    email   String @unique
    address String
    posts   Post[]
}

model Post {
    id       Int    @id @default(autoincrement())
    title    String
    content  String
    author   User   @relation(fields: [authorId], references: [id])
    authorId Int
}
